                        android:layout_height="wrap_content"
                        android:text="Router"
                        android:textAlignment="center"
                        android:textColor="@android:color/black"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:layout_gravity="center_horizontal|center_vertical"
